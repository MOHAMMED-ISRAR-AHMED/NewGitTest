package practice;

public class demo{  
    static void validate(int age){  
      if(age<18)  
       throw new ArithmeticException("not valid");  
      Thread.sleep(5000);
      else  
       System.out.println("welcome to vote");  
    }  
    public static void main(String args[]){  
       validate(18);  
       System.out.println("rest of the code...");  
   }  
 }  